<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Home.DiscoverFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/gotomusicplayer"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="152dp"
            android:text="@string/music_player_page_button"
            app:layout_constraintTop_toBottomOf="@+id/gotosearch"
            tools:layout_editor_absoluteX="0dp" />

        <Button
            android:id="@+id/gotocreateevent"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="100dp"
            android:text="@string/create_event_button"
            app:layout_constraintTop_toBottomOf="@+id/gotosearch"
            tools:layout_editor_absoluteX="0dp" />

        <Button
            android:id="@+id/gotoUploadAlbum"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:text="@string/upload_album_btn"
            app:layout_constraintTop_toBottomOf="@+id/gotocreategroup"
            tools:layout_editor_absoluteX="0dp" />

        <Button
            android:id="@+id/gotosearch"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/search_button"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <Button
            android:id="@+id/gotocreategroup"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/create_group_button"
            app:layout_constraintTop_toBottomOf="@+id/gotosearch" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.drawerlayout.widget.DrawerLayout>